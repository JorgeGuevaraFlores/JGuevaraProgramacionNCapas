@model PL.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title" class="container mt-5">
    <h2 id="title" class="text-center mb-4">@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center">Create a new account</h4>
        <hr />
        @*@Html.ValidationSummary("", new { @class = "alert alert-danger" })*@
        @Html.ValidationSummary()

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Usuario.Nombre, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Usuario.Nombre, new { @class = "form-control", @placeholder = "First Name" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Usuario.ApellidoPaterno, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Usuario.ApellidoPaterno, new { @class = "form-control", @placeholder = "Last Name (Paternal)" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Usuario.ApellidoMaterno, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Usuario.ApellidoMaterno, new { @class = "form-control", @placeholder = "Last Name (Maternal)" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Usuario.FechaNacimiento, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Usuario.FechaNacimiento, new { @class = "form-control", @id="inputFecha", @placeholder = "Date of Birth" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.Rol.Id, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Rol.Name, new SelectList(Model.Rol.Roles, "Name", "Name"), "Selecciona un rol", new { @class = "form-select" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Register" class="btn btn-outline-dark btn-block w-100" />
            </div>
        </div>
    }
</main>

<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#inputFecha").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "1900:2024",
                dateFormat: "dd/mm/yy"
            });
        });
    </script>
}
